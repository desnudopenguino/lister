.modal.hide.fade{ :tabindex => "-1", :role => "dialog", "aria-labelledby" => "editItemLabel", "aria-hidden" => "true", :id => "edit_" + dom_id(item) }
  .modal-header
    %button{ :type => "button", :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" }
      &times;
    %h3.editItemLabel Edit Item
  = form_for([item]) do |f|
    .modal-body
      .field
        = f.label :name
        = f.text_field :name
    .modal-footer
      %button.btn{ "data-dismiss" => "modal", "aria-hidden" => "true"} Close
      %button.btn.btn-primary{ :type => :submit } Save
