.modal.hide.fade{ :tabindex => "-1", :role => "dialog", "aria-labelledby" => "newItemLabel", "aria-hidden" => "true", :id => dom_id(@newItem) }
  .modal-header
    %button{ :type => "button", :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" }
      &times;
    %h3.newItemLabel New Item
  = form_for([@list, @newItem]) do |f|
    .modal-body
      = f.label :name
      = f.text_field :name
    .modal-footer
      %button.btn{ "data-dismiss" => "modal", "aria-hidden" => "true "} Close
      %button.btn.btn-primary{ :type => "submit" } Save
