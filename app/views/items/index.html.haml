%h1 Items
%table
  %thead
    %tr
      %th List
      %th Name
      %th
      %th
      %th
  %tbody
  - @items.each do |item|
    %tr
      %td= item.list.name
      %td= item.name
      %td= link_to 'Show', item
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }      
%p= link_to 'New Item', new_item_path
