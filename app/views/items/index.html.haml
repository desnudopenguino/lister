%h1
  Items
  %a{ :title => 'New Item', :class => "btn btn-primary", :href => new_item_path }
    %i{ :class => "icon-plus-sign icon-white" }
%table{:class => "table table-striped"}
  %thead
    %tr
      %th List
      %th Name
      %th
      %th
      %th
  %tbody
  - @items.each do |item|
    %tr
      %td= item.list.name
      %td= item.name
      %td= link_to 'Show', item
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }      
