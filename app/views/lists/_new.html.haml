#newList.modal.hide.fade{ :tabindex => "-1", :role => "dialog", "aria-labelledby" => "newListLabel", "aria-hidden" => "true" }
  .modal-header
    %button{ :type => "button", :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" }
      &times;
    %h3.newListLabel Modal Header
  .modal-body
    %h1 New List
    - @list = @newList
    = render 'form'
    %p
      = link_to 'Back', lists_path
  .modal-footer
    %button.btn{ :href => "#", "data-dismiss" => "modal", "aria-hidden" => "true" } Close
    %button.btn.btn-primary{ :href => "#" } Save Changes
