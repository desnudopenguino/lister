%h1 
  Lists
  %a.btn.btn-primary{ :title => 'New List', :href => "#newList", :role => "button", "data-toggle" => "modal" }
    %i.icon-plus-sign.icon-white
%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th
      %th
  %tbody
  - @lists.each do |list|
    %tr
      %td= link_to list.name, list
      %td= link_to 'Edit', "#edit_"+ dom_id(list) #edit_list_path(list)
      %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
= render "new"

