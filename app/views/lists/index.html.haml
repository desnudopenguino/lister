%h1 Lists
%table{:class => "table table-striped"}
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  %tbody
  - @lists.each do |list|
    %tr
      %td= list.name
      %td= link_to 'Show', list
      %td= link_to 'Edit', edit_list_path(list)
      %td= link_to 'Destroy', list, method: :delete

%p
  = link_to 'New List', new_list_path
