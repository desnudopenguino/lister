!!! 5
%html
  %head
    %title Lister
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "application", 'http://fonts.googleapis.com/css?family=Courgette'
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    #content.container
      .navbar.navbar-inverse
        .navbar-inner
          = link_to "Lister", :root, :class => "brand"
          .container
            = render_crumbs format: :html_list, :ul_class => "nav"
            %ul.nav.pull-right
              - if user_signed_in?
                %li= link_to current_user.email, edit_user_registration_path 
                %li= link_to "Sign out", destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Sign in", new_user_session_path
      = yield
